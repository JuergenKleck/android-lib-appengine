<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
		<shape android:shape="rectangle" > 
		    <gradient
                android:startColor="#458fb1"
                android:endColor="#9bcce3"
                android:angle="270" 
                android:type="linear"
				/> 
		     
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		</shape>
    </item>
    <item>
		<shape android:shape="rectangle" > 
		    <gradient android:startColor="#FFb8c3d0" 
		        android:endColor="#FFeff6ff" 
		        android:angle="90"/> 
		     
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		</shape>
  	</item>
</selector>